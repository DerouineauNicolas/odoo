<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="nicoapp.list">
      <field name="name">nicoapp list</field>
      <field name="model">nicoapp.nicoapp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="nicoapp.action_window">
      <field name="name">nicoapp window</field>
      <field name="res_model">nicoapp.nicoapp</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="nicoapp.action_server">
      <field name="name">nicoapp server</field>
      <field name="model_id" ref="model_nicoapp_nicoapp"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="nicoapp" id="nicoapp.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="nicoapp.menu_1" parent="nicoapp.menu_root"/>
    <menuitem name="Menu 2" id="nicoapp.menu_2" parent="nicoapp.menu_root"/>
    -->
    <!-- actions -->

    <menuitem name="List" id="nicoapp.menu_1_list" parent="nicoapp.menu_1"
              action="nicoapp.action_window"/>
    <menuitem name="Server to list" id="nicoapp" parent="nicoapp.menu_2"
              action="nicoapp.action_server"/>

  </data>
</odoo>